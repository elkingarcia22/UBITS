      // FunciÃ³n para inicializar acordeones del Input
      window.initInputAccordions = function(componentId) {
          const accordionId = `input-controls-accordion-${componentId}`;
          let retries = 0;
          const maxRetries = 10;
          
          function tryInit() {
            const accordion = document.getElementById(accordionId);
            
            if (!accordion) {
              retries++;
              if (retries < maxRetries) {
                setTimeout(tryInit, 100);
                return;
              } else {
                return;
              }
            }
            
            const headers = accordion.querySelectorAll('.ubits-accordion-header');
            
            headers.forEach((header) => {
              const toggleId = header.getAttribute('data-accordion-toggle');
              if (!toggleId) return;
              
              const body = document.getElementById(toggleId);
              const chevron = header.querySelector('.ubits-accordion-chevron');
              
              if (!body) return;
              
              // Configurar estado inicial
              const isOpen = body.style.display !== 'none';
              if (chevron) {
                chevron.style.transform = isOpen ? 'rotate(180deg)' : 'rotate(0deg)';
              }
              
              // Remover listeners anteriores si existen
              const newHeader = header.cloneNode(true);
              header.parentNode.replaceChild(newHeader, header);
              
              // Agregar listener
              newHeader.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                
                const currentBody = document.getElementById(toggleId);
                const currentChevron = newHeader.querySelector('.ubits-accordion-chevron');
                
                if (!currentBody) return;
                
                const isCurrentlyOpen = currentBody.style.display !== 'none';
                currentBody.style.display = isCurrentlyOpen ? 'none' : 'block';
                
                if (currentChevron) {
                  currentChevron.style.transform = isCurrentlyOpen ? 'rotate(0deg)' : 'rotate(180deg)';
                }
              });
            });
          }
          
          tryInit();
        };
      
