      // ========== SCORE CARD METRICS ==========
      // Estado del preview del Score Card Metrics
      const scoreCardMetricsPreviewState = {};
      
      // FunciÃ³n para inicializar el estado del preview del Score Card Metrics
      function initScoreCardMetricsPreviewState(componentId) {
        if (!scoreCardMetricsPreviewState[componentId]) {
          scoreCardMetricsPreviewState[componentId] = {
            size: 'md',
            title: 'Califica el producto',
            totalResponses: 7,
            responsesLabel: 'respuestas',
            average: 4.00,
            averageLabel: 'Promedio:',
            score: 3,
            leftLabel: '0',
            rightLabel: '5',
            titleIcon: '',
            titleIconStyle: 'regular',
            titleIconColor: '',
            showInfoIcon: false,
            showActionButton: false
          };
        }
        return scoreCardMetricsPreviewState[componentId];
      }
      
      // FunciÃ³n para establecer controles del Score Card Metrics
      window.setScoreCardMetricsControl = function(option, value, componentId) {
        const state = initScoreCardMetricsPreviewState(componentId);
        
        if (option === 'size') {
          state.size = value;
        } else if (option === 'title') {
          state.title = value;
        } else if (option === 'totalResponses') {
          state.totalResponses = value;
        } else if (option === 'responsesLabel') {
          state.responsesLabel = value;
        } else if (option === 'average') {
          state.average = value;
        } else if (option === 'averageLabel') {
          state.averageLabel = value;
        } else if (option === 'score') {
          state.score = value;
        } else if (option === 'leftLabel') {
          state.leftLabel = value;
        } else if (option === 'rightLabel') {
          state.rightLabel = value;
        } else if (option === 'titleIcon') {
          state.titleIcon = value;
        } else if (option === 'titleIconStyle') {
          state.titleIconStyle = value;
        } else if (option === 'titleIconColor') {
          state.titleIconColor = value;
        } else if (option === 'showInfoIcon') {
          state.showInfoIcon = value;
          const statusEl = document.getElementById(`score-card-metrics-show-info-icon-status-${componentId}`);
          if (statusEl) statusEl.textContent = value ? 'Activado' : 'Desactivado';
        } else if (option === 'showActionButton') {
          state.showActionButton = value;
          const statusEl = document.getElementById(`score-card-metrics-show-action-button-status-${componentId}`);
          if (statusEl) statusEl.textContent = value ? 'Activado' : 'Desactivado';
        }
        
        if (typeof window.updateScoreCardMetricsPreview === 'function') {
          window.updateScoreCardMetricsPreview(componentId);
        }
      };
      
      // FunciÃ³n para actualizar el preview del Score Card Metrics
      window.updateScoreCardMetricsPreview = function(componentId) {
        const state = initScoreCardMetricsPreviewState(componentId);
        const preview = document.getElementById(`score-card-metrics-preview-${componentId}`);
        
        if (!preview) {
          console.error('âŒ [updateScoreCardMetricsPreview] Preview no encontrado:', `score-card-metrics-preview-${componentId}`);
          return;
        }
        
        // Generar HTML del Score Card Metrics
        const cardClasses = `ubits-score-card-metrics ubits-score-card-metrics--${state.size}`;
        
        let titleHTML = state.title;
        if (state.titleIcon) {
          const iconClass = state.titleIconStyle === 'solid' ? 'fas' : 'far';
          const iconStyle = state.titleIconColor ? `style="color: ${state.titleIconColor};"` : '';
          titleHTML = `<i class="${iconClass} fa-${state.titleIcon}" ${iconStyle}></i> ${titleHTML}`;
        }
        
        let infoIconHTML = '';
        if (state.showInfoIcon) {
          infoIconHTML = '<i class="far fa-info-circle" style="color: var(--ubits-fg-1-medium); cursor: pointer;"></i>';
        }
        
        let actionButtonHTML = '';
        if (state.showActionButton) {
          actionButtonHTML = '<button class="ubits-button ubits-button--primary ubits-button--sm">Ver mÃ¡s</button>';
        }
        
        // Generar estrellas (5 estrellas basadas en el score)
        let starsHTML = '';
        for (let i = 1; i <= 5; i++) {
          const isFilled = i <= state.score;
          starsHTML += `<i class="far fa-star${isFilled ? ' fa-star' : ''}" style="color: ${isFilled ? 'var(--ubits-accent-brand)' : 'var(--ubits-fg-1-medium)'};"></i>`;
        }
        
        const previewHTML = `
          <div class="${cardClasses}">
            <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 16px;">
              <h3 style="margin: 0; color: var(--ubits-fg-1-high);">${titleHTML}</h3>
              ${infoIconHTML}
            </div>
            <div style="display: flex; align-items: center; gap: 16px; margin-bottom: 16px;">
              <span style="color: var(--ubits-fg-1-medium);">${state.totalResponses} ${state.responsesLabel}</span>
              <span style="color: var(--ubits-fg-1-medium);">${state.averageLabel} ${state.average.toFixed(2)}</span>
            </div>
            <div style="display: flex; align-items: center; gap: 8px; margin-bottom: 8px;">
              <span style="color: var(--ubits-fg-1-medium); font-size: 12px;">${state.leftLabel}</span>
              ${starsHTML}
              <span style="color: var(--ubits-fg-1-medium); font-size: 12px;">${state.rightLabel}</span>
            </div>
            ${actionButtonHTML ? `<div style="margin-top: 16px;">${actionButtonHTML}</div>` : ''}
          </div>
        `;
        
        preview.innerHTML = previewHTML;
      };
    </script>
