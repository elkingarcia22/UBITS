/* ========================================
   UBITS SIMPLE CARD COMPONENT
   Componente de tarjeta simple
   Usando tokens UBITS
   ======================================== */

/* ========================================
   BASE SIMPLE CARD STYLES
   ======================================== */

.ubits-simple-card {
  display: flex;
  flex-direction: column;
  background: var(--ubits-bg-1);
  /* Border constante: 1px solid */
  border: 1px solid var(--ubits-border-1) !important;
  /* Border-radius constante: 8px - FORZADO */
  border-radius: 8px !important;
  padding: var(--ubits-spacing-lg);
  gap: var(--ubits-spacing-md);
  font-family: var(--font-sans);
  transition: all 0.2s ease;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  isolation: isolate;
  position: relative;
}

/* ========================================
   VARIANTS
   ======================================== */

.ubits-simple-card--default {
  background: var(--ubits-bg-1);
  /* Border constante: 1px solid - FORZADO */
  border: 1px solid var(--ubits-border-1) !important;
  /* Border-radius constante: 8px - FORZADO */
  border-radius: 8px !important;
}

.ubits-simple-card--elevated {
  background: var(--ubits-bg-1);
  /* Border constante: 1px solid - FORZADO */
  border: 1px solid var(--ubits-border-1) !important;
  /* Border-radius constante: 8px - FORZADO */
  border-radius: 8px !important;
  box-shadow: var(--ubits-shadow-sm);
}

.ubits-simple-card--elevated:hover {
  box-shadow: var(--ubits-shadow-md);
}

.ubits-simple-card--bordered {
  background: var(--ubits-bg-1);
  /* Border constante: 1px solid (aunque se llame "bordered", mantenemos 1px) - FORZADO */
  border: 1px solid var(--ubits-border-1) !important;
  /* Border-radius constante: 8px - FORZADO */
  border-radius: 8px !important;
}

.ubits-simple-card--flat {
  background: var(--ubits-bg-1);
  border: none;
}

/* ========================================
   SIZES
   ======================================== */

.ubits-simple-card--sm {
  max-width: 280px;
  gap: var(--ubits-spacing-sm);
}

.ubits-simple-card--sm .ubits-simple-card__header {
  height: 100px;
  padding: 0 var(--ubits-spacing-md);
  margin: calc(var(--ubits-spacing-lg) * -1) calc(var(--ubits-spacing-lg) * -1) 0 calc(var(--ubits-spacing-lg) * -1);
  width: calc(100% + var(--ubits-spacing-lg) + var(--ubits-spacing-lg));
}

.ubits-simple-card--sm .ubits-simple-card__bubble {
  width: 70px;
  height: 70px;
}

.ubits-simple-card--sm .ubits-simple-card__bubble--small {
  width: 50px;
  height: 50px;
}

.ubits-simple-card--sm .ubits-simple-card__logo {
  width: 40px;
  height: 40px;
  font-size: 20px;
}

.ubits-simple-card--sm .ubits-simple-card__bubble--small .ubits-simple-card__logo {
  width: 30px;
  height: 30px;
  font-size: 16px;
}

.ubits-simple-card--md {
  max-width: 400px;
  padding: var(--ubits-spacing-lg);
  gap: var(--ubits-spacing-md);
}

.ubits-simple-card--md .ubits-simple-card__header {
  height: 140px;
  padding: 0 var(--ubits-spacing-xl);
}

.ubits-simple-card--lg {
  max-width: 560px;
  padding: var(--ubits-spacing-xl);
  gap: var(--ubits-spacing-lg);
}

.ubits-simple-card--lg .ubits-simple-card__header {
  height: 160px;
  padding: 0 var(--ubits-spacing-2xl);
}

.ubits-simple-card--lg .ubits-simple-card__bubble {
  width: 100px;
  height: 100px;
}

.ubits-simple-card--lg .ubits-simple-card__bubble--small {
  width: 70px;
  height: 70px;
}

.ubits-simple-card--lg .ubits-simple-card__logo {
  width: 56px;
  height: 56px;
  font-size: 28px;
}

.ubits-simple-card--lg .ubits-simple-card__bubble--small .ubits-simple-card__logo {
  width: 42px;
  height: 42px;
  font-size: 20px;
}

.ubits-simple-card--xl {
  max-width: 720px;
  padding: var(--ubits-spacing-2xl);
  gap: var(--ubits-spacing-xl);
}

.ubits-simple-card--xl .ubits-simple-card__header {
  height: 180px;
  padding: 0 var(--ubits-spacing-3xl);
}

.ubits-simple-card--xl .ubits-simple-card__bubble {
  width: 110px;
  height: 110px;
}

.ubits-simple-card--xl .ubits-simple-card__bubble--small {
  width: 80px;
  height: 80px;
}

.ubits-simple-card--xl .ubits-simple-card__logo {
  width: 64px;
  height: 64px;
  font-size: 32px;
}

.ubits-simple-card--xl .ubits-simple-card__bubble--small .ubits-simple-card__logo {
  width: 48px;
  height: 48px;
  font-size: 24px;
}

/* ========================================
   HEADER
   ======================================== */

.ubits-simple-card__header {
  position: relative;
  width: calc(100% + var(--ubits-spacing-lg) + var(--ubits-spacing-lg));
  height: 140px;
  background: linear-gradient(135deg, var(--ubits-bg-5) 0%, var(--ubits-bg-4) 100%);
  /* Border-radius constante: 8px en esquinas superiores para coincidir con el contenedor */
  border-radius: 8px 8px 0 0;
  margin: calc(var(--ubits-spacing-lg) * -1) calc(var(--ubits-spacing-lg) * -1) 0 calc(var(--ubits-spacing-lg) * -1);
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 var(--ubits-spacing-xl);
}

/* Grid pattern sutil en el header - solo en la parte inferior */
.ubits-simple-card__header::before {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60%;
  background-image: 
    linear-gradient(color-mix(in srgb, var(--ubits-bg-1) 5%, transparent) 1px, transparent 1px),
    linear-gradient(90deg, color-mix(in srgb, var(--ubits-bg-1) 5%, transparent) 1px, transparent 1px);
  background-size: 24px 24px;
  opacity: 0.4;
  mask-image: linear-gradient(to bottom, transparent 0%, color-mix(in srgb, var(--ubits-fg-1-high) 30%, transparent) 30%, color-mix(in srgb, var(--ubits-fg-1-high) 60%, transparent) 100%);
  -webkit-mask-image: linear-gradient(to bottom, transparent 0%, color-mix(in srgb, var(--ubits-fg-1-high) 30%, transparent) 30%, color-mix(in srgb, var(--ubits-fg-1-high) 60%, transparent) 100%);
  pointer-events: none;
}

/* Glow effect sutil en la parte superior del header */
.ubits-simple-card__header::after {
  content: '';
  position: absolute;
  top: -20%;
  left: 50%;
  transform: translateX(-50%);
  width: 200px;
  height: 200px;
  background: radial-gradient(circle, color-mix(in srgb, var(--ubits-feedback-error-border) 15%, transparent) 0%, transparent 70%);
  opacity: 0.6;
  filter: blur(40px);
  pointer-events: none;
  border-radius: 8px 8px 0 0;
}

/* Decoraciones (burbujas) */
.ubits-simple-card__header-decoration {
  position: relative;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ubits-simple-card__header-decoration--left {
  /* Burbuja grande a la izquierda */
}

.ubits-simple-card__header-decoration--right {
  /* Burbuja pequeña a la derecha */
}

/* Burbujas con mejor diseño */
.ubits-simple-card__bubble {
  width: 90px;
  height: 90px;
  border-radius: 50%;
  background: color-mix(in srgb, var(--ubits-fg-1-high) 25%, transparent);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid color-mix(in srgb, var(--ubits-bg-1) 8%, transparent);
  box-shadow: 
    0 8px 16px color-mix(in srgb, var(--ubits-fg-1-high) 30%, transparent),
    inset 0 1px 0 color-mix(in srgb, var(--ubits-bg-1) 10%, transparent);
  position: relative;
  transition: transform 0.3s ease;
}

.ubits-simple-card__bubble:hover {
  transform: scale(1.05);
}

.ubits-simple-card__bubble--small {
  width: 60px;
  height: 60px;
}

.ubits-simple-card__bubble-content {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

/* Logo dentro de la burbuja - cuadrado blanco con letra */
.ubits-simple-card__logo {
  width: 48px;
  height: 48px;
  background: var(--ubits-bg-1);
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 24px;
  color: var(--ubits-fg-1-high);
  box-shadow: 
    0 4px 12px color-mix(in srgb, var(--ubits-fg-1-high) 25%, transparent),
    0 2px 4px color-mix(in srgb, var(--ubits-fg-1-high) 15%, transparent);
  font-family: var(--font-sans);
  letter-spacing: -0.5px;
}

.ubits-simple-card__bubble--small .ubits-simple-card__logo {
  width: 36px;
  height: 36px;
  font-size: 18px;
  border-radius: 8px;
}

/* ========================================
   BODY
   ======================================== */

.ubits-simple-card__body {
  display: flex;
  flex-direction: column;
  gap: var(--ubits-spacing-sm);
  flex: 1;
}

.ubits-simple-card__title {
  margin: 0;
  color: var(--ubits-fg-1-high);
}

.ubits-simple-card__subtitle {
  margin: 0;
  color: var(--ubits-fg-1-medium);
}

.ubits-simple-card__content {
  margin: 0;
  color: var(--ubits-fg-1-high);
  line-height: 1.5;
}

/* ========================================
   FOOTER
   ======================================== */

.ubits-simple-card__footer {
  display: flex;
  gap: var(--ubits-spacing-sm);
  align-items: center;
  justify-content: flex-end;
  margin-top: var(--ubits-spacing-md);
  padding-top: var(--ubits-spacing-md);
  border-top: 1px solid var(--ubits-border-1);
}

.ubits-simple-card__button {
  flex-shrink: 0;
}

/* ========================================
   RESPONSIVE
   ======================================== */

@media (max-width: 480px) {
  .ubits-simple-card {
    padding: var(--ubits-spacing-md);
  }

  .ubits-simple-card__header {
    height: 100px;
    margin: calc(var(--ubits-spacing-md) * -1) calc(var(--ubits-spacing-md) * -1) 0 calc(var(--ubits-spacing-md) * -1);
    width: calc(100% + var(--ubits-spacing-md) + var(--ubits-spacing-md));
  }

  .ubits-simple-card__footer {
    flex-direction: column;
  }

  .ubits-simple-card__button {
    width: 100%;
  }
}

