/* ========================================
   FLOATING BUTTON MODIFIER
   ======================================== */

/* Token de elevación floating del sistema de diseño UBITS:
   x: 0, y: 14, blur: 28.8, spread: 0, opacity: 24% */
:root {
    --ubits-elevation-floating: 0 14px 28.8px 0 rgba(0, 0, 0, 0.24);
    --ubits-elevation-floating-hover: 0 16px 32px 0 rgba(0, 0, 0, 0.28);
    --ubits-elevation-floating-active: 0 8px 16px 0 rgba(0, 0, 0, 0.20);
}

[data-theme="dark"] {
    --ubits-elevation-floating: 0 14px 28.8px 0 rgba(0, 0, 0, 0.40);
    --ubits-elevation-floating-hover: 0 16px 32px 0 rgba(0, 0, 0, 0.45);
    --ubits-elevation-floating-active: 0 8px 16px 0 rgba(0, 0, 0, 0.30);
}

