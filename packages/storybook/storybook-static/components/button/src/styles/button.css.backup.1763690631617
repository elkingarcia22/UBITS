/* ========================================
   UBITS BUTTON COMPONENT
   Componente de botón con todas las variantes
   Usando tokens UBITS del nuevo playground
   ======================================== */

/* ========================================
   BASE BUTTON STYLES
   ======================================== */

.ubits-button {
    /* Base styles */
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--ubits-spacing-sm, 8px);
    padding: var(--ubits-spacing-md, 12px) var(--ubits-spacing-lg, 16px);
    border: none;
    border-radius: var(--ubits-border-radius-sm, 8px);
    font-family: var(--font-sans);
    font-weight: var(--weight-semibold);
    line-height: 1;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.2s ease;
    position: relative;
    user-select: none;
    white-space: nowrap;
    
    /* Default state (Primary) */
    background: var(--modifiers-normal-button-color-light-brand-primary-bg-default);
    color: var(--ubits-btn-primary-fg);
    border: 1px solid var(--modifiers-normal-button-color-light-brand-primary-bg-default);
    
    /* Medium (default) height */
    height: 40px;
}

/* Tipografía Medium (default) - usa tokens de typography */
.ubits-button span {
    font-family: var(--font-sans);
    font-size: var(--font-body-md-size);
    font-weight: var(--weight-semibold);
    line-height: var(--font-body-md-line);
}

/* ========================================
   BUTTON STATES
   ======================================== */

/* Hover State */
.ubits-button:hover:not(:disabled):not(.ubits-button--loading) {
    background: var(--modifiers-normal-button-color-light-brand-primary-bg-hover) !important;
    border-color: var(--modifiers-normal-button-color-light-brand-primary-bg-hover) !important;
}

/* Pressed/Active State */
.ubits-button:active:not(:disabled):not(.ubits-button--loading) {
    background: var(--modifiers-normal-button-color-light-brand-primary-bg-pressed) !important;
    border-color: var(--modifiers-normal-button-color-light-brand-primary-bg-pressed) !important;
    transform: translateY(1px);
}

/* Focus State */
.ubits-button:focus-visible {
    outline: none;
    box-shadow: 0px 0px 0px 4px var(--ubits-button-focus-ring);
}

/* Disabled State */
.ubits-button:disabled,
.ubits-button[aria-disabled="true"] {
    background: var(--modifiers-normal-color-light-bg-disabled) !important;
    color: var(--modifiers-normal-color-light-fg-on-disabled) !important;
    border-color: var(--modifiers-normal-color-light-border-disabled) !important;
    cursor: not-allowed;
    pointer-events: none;
}

/* Disabled State for all variants */
.ubits-button--primary:disabled,
.ubits-button--secondary:disabled {
    background: var(--modifiers-normal-color-light-bg-disabled) !important;
    color: var(--modifiers-normal-color-light-fg-on-disabled) !important;
    border-color: var(--modifiers-normal-color-light-border-disabled) !important;
    cursor: not-allowed;
    pointer-events: none;
}

/* Tertiary disabled mantiene su estilo pero con opacidad menor */
.ubits-button--tertiary:disabled {
    background: transparent !important;
    color: var(--modifiers-normal-button-color-light-brand-tertiary-fg) !important;
    border-color: transparent !important;
    opacity: 0.5;
    cursor: not-allowed;
    pointer-events: none;
}

.ubits-button:disabled::before,
.ubits-button[aria-disabled="true"]::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border: 1px solid var(--modifiers-normal-color-light-border-disabled);
    border-radius: var(--ubits-border-radius-sm, 8px);
    pointer-events: none;
}

/* Tertiary disabled no debe tener el pseudo-elemento ::before */
.ubits-button--tertiary:disabled::before,
.ubits-button--tertiary[aria-disabled="true"]::before {
    content: none;
    border: none;
}

/* Loading State */
.ubits-button--loading,
.ubits-button[data-loading="true"] {
    cursor: wait;
    pointer-events: none;
    opacity: 0.8;
    position: relative;
}

/* Ocultar contenido original durante loading */
.ubits-button--loading > span:not(.button-text),
.ubits-button[data-loading="true"] > span:not(.button-text) {
    opacity: 0;
    transition: opacity 0.2s ease;
}

.ubits-button--loading > i:not(.ubits-button__spinner *),
.ubits-button[data-loading="true"] > i:not(.ubits-button__spinner *) {
    opacity: 0;
    transition: opacity 0.2s ease;
}

/* Spinner de UBITS dentro del botón */
.ubits-button__spinner {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    margin: var(--ubits-spacing-none, 0);
    padding: var(--ubits-spacing-none, 0);
    line-height: 1;
}

/* Asegurar que el spinner tenga el color correcto según la variante del botón */
.ubits-button--primary .ubits-button__spinner,
.ubits-button--primary .ubits-button__spinner .ubits-spinner__segment {
    color: var(--ubits-btn-primary-fg, #ffffff) !important;
}

.ubits-button--secondary .ubits-button__spinner,
.ubits-button--secondary .ubits-button__spinner .ubits-spinner__segment {
    color: var(--modifiers-normal-button-color-light-brand-secondary-fg-default) !important;
}

.ubits-button--tertiary .ubits-button__spinner,
.ubits-button--tertiary .ubits-button__spinner .ubits-spinner__segment {
    color: var(--modifiers-normal-button-color-light-brand-tertiary-fg) !important;
}

/* Ocultar label del spinner si existe dentro del botón */
.ubits-button__spinner .ubits-spinner__label {
    display: none;
}

/* Ajustar tamaño del spinner dentro del botón para que se vea bien */
.ubits-button__spinner .ubits-spinner__circle {
    margin: var(--ubits-spacing-none, 0);
}

/* Loading overlay (opcional) */
.ubits-button--loading::after,
.ubits-button[data-loading="true"]::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--ubits-border-radius-sm, 8px);
    pointer-events: none;
}

